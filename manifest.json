{
  "manifest_version": 2,

  "name": "LionBlock",
  "description": "Adblocking simplified: A low-profile, independent ad blocker for the masses.",
  "version": "1.0",
  "background": {
    "scripts": ["js/blocker.bundle.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "runtime",
    "<all_urls>"
  ]
}