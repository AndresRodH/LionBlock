{
  "manifest_version": 2,

  "name": "LionBlock",
  "description": "AdBusters first extension",
  "version": "1.0",
  "background": {
    "scripts": ["js/blocker.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ]
}